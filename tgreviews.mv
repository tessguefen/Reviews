<MvFUNCTION NAME = "Module_Product_Facet_Value_Selected" PARAMETERS = "module var, facet var, value var, input_values var, input_value_count" STANDARDOUTPUTLEVEL = "">
	<MvFUNCTIONRETURN VALUE = "{ miva_array_search( l.input_values, 1, l.input_value, 'l.input_value EQ l.value' ) }">
</MvFUNCTION>

<MvFUNCTION NAME = "Module_Product_Facet_Values_Query" PARAMETERS = "module var, query var, facet var, values var" STANDARDOUTPUTLEVEL = "">
	<MvIF EXPR = "{ l.facet:code NE 'tgr_rating' }">
		<MvFUNCTIONRETURN VALUE = 0>
	</MvIF>

	<MvASSIGN NAME = "l.values" 		VALUE = "">
	<MvASSIGN NAME = "l.value_count"	VALUE = 0>
	<MvASSIGN NAME = "l.facet_query"	VALUE = "{ l.query }">

	<MvEVAL EXPR = "{ [ g.Module_Library_DB ].SQL_Query_SELECT( l.facet_query, 'DISTINCT FLOOR( tgra.rating ) AS tgr_rating, COUNT( tgra.rating ) AS rating_count' ) }">
	<MvEVAL EXPR = "{ [ g.Module_Library_DB ].SQL_Query_FROM( l.facet_query, g.Store_Table_Prefix $ 'TGReviewsProductsAverages', 'tgra' ) }">
	<MvEVAL EXPR = "{ [ g.Module_Library_DB ].SQL_Query_GROUP_BY( l.facet_query, 'tgra.rating' ) }">
	<MvEVAL EXPR = "{ [ g.Module_Library_DB ].SQL_Query_WHERE( l.facet_query, 'tgra.product_id = prod.id', '' ) }">
	<MvEVAL EXPR = "{ [ g.Module_Library_DB ].SQL_Query_ORDER_BY( l.facet_query, 'tgra.rating', 'DESC' ) }">

	<MvASSIGN NAME = "l.facet_sql"		VALUE = "{ [ g.Module_Library_DB ].SQL_Query_Build( l.facet_query, l.facet_fields ) }">

	<MvIF EXPR = "{ NOT [ g.Module_Library_Native_DBAPI ].DB_OPENVIEW_Range( 'Merchant', 'TGReviewsProductsAverages', l.facet_sql, l.facet_fields, 0, 0 ) }">
		<MvFUNCTIONRETURN VALUE = "{ [ g.Module_Library_Utilities ].Error( 'MOD-SYS-TGR-137', g.MvOPENVIEW_Error ) }">
	</MvIF>

	<MvASSIGN NAME = "l.ratings"		VALUE = "">
	<MvASSIGN NAME = "l.rating_count"	VALUE = 0>

	<MvWHILE EXPR = "{ NOT TGReviewsProductsAverages.d.EOF }">
		<MvREFERENCEARRAY NAME = "l.value" VARIABLE = "l.values_by_value">
			<MvMEMBER NAME = "{ TGReviewsProductsAverages.d.tgr_rating }">
		</MvREFERENCEARRAY>

		<MvIF EXPR = "{ NOT ISNULL l.value:value }">
			<MvASSIGN NAME = "l.value:count"	VALUE = "{ l.value:count + TGReviewsProductsAverages.d.rating_count }">
		<MvELSE>
			<MvASSIGN NAME = "l.value:value"	VALUE = "{ TGReviewsProductsAverages.d.tgr_rating }">
			<MvASSIGN NAME = "l.value:count"	VALUE = "{ TGReviewsProductsAverages.d.rating_count }">

			<MvASSIGN NAME = "l.value_count"	VALUE = "{ miva_array_insert_ref( l.ratings, l.value, -1 ) }">
		</MvIF>

		<MvSKIP NAME = "Merchant" VIEW = "TGReviewsProductsAverages" ROWS = 1>
	</MvWHILE>

	<MvCLOSEVIEW NAME = "Merchant" VIEW = "TGReviewsProductsAverages">

	<MvASSIGN NAME = "l.count" VALUE = 4>
	
	<MvIF EXPR = "{ l.facet:type EQ 'rangeslider' }">
		<MvASSIGN NAME = "l.count" VALUE = 5>
	</MvIF>

	<MvWHILE EXPR = "{ l.count GT 0 }">
		<MvASSIGN NAME = "l.rating_value:value" VALUE = "{ l.count }">
		<MvASSIGN NAME = "l.rating_value:count" VALUE = 0>

		<MvFOREACH ITERATOR = "l.rating" ARRAY = "l.ratings">
			<MvIF EXPR = "{ l.rating:value LT l.count }">
				<MvFOREACHCONTINUE>
			</MvIF>

			<MvASSIGN NAME = "l.rating_value:count" VALUE = "{ l.rating_value:count + l.rating:count }">
		</MvFOREACH>

		<MvIF EXPR = "{ l.rating_value:count GT 0 }">
			<MvASSIGN NAME = "l.value_count" VALUE = "{ miva_array_insert_var( l.values, l.rating_value, -1 ) }">
		</MvIF>

		<MvASSIGN NAME = "l.count" VALUE = "{ l.count - 1 }">
	</MvWHILE>

	<MvIF EXPR = "{ l.facet:type EQ 'rangeslider' AND l.value_count GT 1 }">
		<MvASSIGN NAME = "l.values" INDEX = 1	MEMBER = "value"	VALUE = "{ l.values[ 1 ]:value $ '-' $ l.values[ l.value_count ]:value }">
		<MvASSIGN NAME = "l.values" INDEX = 1	MEMBER = "count"	VALUE = "{ l.product_count }">

		<MvFUNCTIONRETURN VALUE = 1>
	</MvIF>

	<MvFUNCTIONRETURN VALUE = "{ [ g.Module_Library_DB ].ListLoad_EOF_Return( 'MOD-SYS-TGR-138', l.value_count ) }">
</MvFUNCTION>

<MvFUNCTION NAME = "Module_Product_Facet_Query_Search" PARAMETERS = "module var, query var, facet var, facet_values var" STANDARDOUTPUTLEVEL = "">
	<MvEVAL EXPR = "{ [ g.Module_Library_DB ].SQL_Query_DISTINCT( l.query ) }">

	<MvEVAL EXPR = "{ [ g.Module_Library_DB ].SQL_Query_FROM_Before( l.query, 'prod', g.Store_Table_Prefix $ 'TGReviewsProductsAverages', 'tgra' ) }">

	<MvIF EXPR = "{ l.facet:type EQ 'rangeslider' }">
		<MvEVAL EXPR = "{ [ g.Module_Library_DB ].SQL_Query_SUB_WHERE_BEGIN( l.query ) }">
			<MvFOREACH ITERATOR = "l.facet_value" ARRAY = "l.facet_values">
				<MvASSIGN NAME = "l.rating_low"		VALUE = "{ floor( gettoken( l.facet_value, '-', 1 ) ) }">
				<MvASSIGN NAME = "l.rating_high"	VALUE = "{ floor( gettoken( l.facet_value, '-', 2 ) ) }">
	
				<MvEVAL EXPR = "{ [ g.Module_Library_DB ].SQL_Query_WHERE( l.query, 'FLOOR( tgra.rating ) >= ? AND FLOOR( tgra.rating ) <= ? AND prod.id = tgra.product_id', [ g.Module_Library_DB ].SQL_Query_Field( l.rating_low ) $ ',' $ [ g.Module_Library_DB ].SQL_Query_Field( l.rating_high ) ) }">
			</MvFOREACH>
		<MvEVAL EXPR = "{ [ g.Module_Library_DB ].SQL_Query_SUB_WHERE_END_First( l.query, 'OR' ) }">
	<MvELSE>
		<MvEVAL EXPR = "{ [ g.Module_Library_DB ].SQL_Query_SUB_WHERE_BEGIN( l.query ) }">
			<MvFOREACH ITERATOR = "l.facet_value" ARRAY = "l.facet_values">
				<MvEVAL EXPR = "{ [ g.Module_Library_DB ].SQL_Query_WHERE( l.query, 'FLOOR( tgra.rating ) >= ? AND prod.id = tgra.product_id', [ g.Module_Library_DB ].SQL_Query_Field( l.facet_value ) ) }">
			</MvFOREACH>
		<MvEVAL EXPR = "{ [ g.Module_Library_DB ].SQL_Query_SUB_WHERE_END_First( l.query, 'OR' ) }">
	</MvIF>

	<MvFUNCTIONRETURN VALUE = 1>
</MvFUNCTION>

