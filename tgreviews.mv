	<MvIF EXPR = "{ NOT l.columns_present:rating }">
		<MvFUNCTIONRETURN VALUE = "{ [ g.Module_Library_Utilities ].Error( 'MOD-SYS-TGR-00061', 'The Rating field must be assigned to an import file column' ) }">
