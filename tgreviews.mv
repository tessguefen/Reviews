		<MvIF EXPR = "{ NOT [ g.Module_Feature_PGR_UT ].DiscountState_Predict_Baseline_Discounts( l.discount_state ) }">
			<MvFUNCTIONRETURN VALUE = 0>
		</MvIF>
	</MvIF>

	<MvFOREACH INDEX = "l.item_pos" ITERATOR = "l.orderitem" ARRAY = "l.settings:items" COUNT = "{ l.settings:item_count }">
		<MvASSIGN NAME = "l.null"												VALUE = "{ Load_Product_MostRecent_Order_Customer( l.orderitem:product_id, g.Customer:id, l.orderitem:order ) }">

		<MvIF EXPR = "{ l.orderitem:order:order_id }">
			<MvASSIGN NAME = "l.orderitem:order:formatted_orderdate_date"		VALUE = "{ [ g.Module_Library_Utilities ].Format_Date( l.orderitem:order:orderdate, s.miva_language ) }">
			<MvASSIGN NAME = "l.orderitem:order:formatted_orderdate_time"		VALUE = "{ [ g.Module_Library_Utilities ].Format_Time( l.orderitem:order:orderdate, s.miva_language ) }">
			<MvASSIGN NAME = "l.orderitem:order:formatted_price"				VALUE = "{ [ g.Module_Root $ g.Store:currncy_mod:module ].CurrencyModule_AddFormatting( g.Store:currncy_mod, l.orderitem:order:price) }">
			<MvASSIGN NAME = "l.orderitem:order:formatted_retail"				VALUE = "{ [ g.Module_Root $ g.Store:currncy_mod:module ].CurrencyModule_AddFormatting( g.Store:currncy_mod, l.orderitem:order:retail) }">
			<MvASSIGN NAME = "l.orderitem:order:formatted_base_price"			VALUE = "{ [ g.Module_Root $ g.Store:currncy_mod:module ].CurrencyModule_AddFormatting( g.Store:currncy_mod, l.orderitem:order:base_price) }">
		</MvIF>

		<MvIF EXPR = "{ NOT [ g.Module_Feature_TUI_UT ].CommonComponentFields_Initialize_Product_Runtime( l.orderitem:product ) OR
						NOT [ g.Module_Feature_TUI_UT ].CommonComponentFields_Initialize_Product_CustomFields( l.orderitem:product:id, l.orderitem:product, l.all_settings, l.settings:fields_custom ) }">
			<MvFUNCTIONRETURN VALUE = 0>
		</MvIF>

		<MvASSIGN NAME = "l.null" 												VALUE = "{ [ g.Module_Feature_TUI_UT ].CommonComponentFields_Initialize_Product_ImageTypes( l.orderitem:product:id, 0, l.orderitem:product, l.all_settings, l.settings:imagetypes, l.settings:constrain, l.settings:b_width, l.settings:b_height ) }">

		<MvIF EXPR = "{ l.settings:predictdiscounts }">
			<MvIF EXPR = "{ NOT [ g.Module_Feature_PGR_UT ].DiscountState_Predict_Product_Discounts( l.discount_state, l.orderitem:product, l.variant_id, l.orderitem:quantity, l.orderitem:product:price, l.orderitem:product:discounts, l.orderitem:product:discount_count ) }">
				<MvFUNCTIONRETURN VALUE = 0>
			</MvIF>

			<MvASSIGN NAME = "l.orderitem:product:formatted_price" 				VALUE = "{ [ g.Module_Root $ g.Store:currncy_mod:module ].CurrencyModule_AddFormatting( g.Store:currncy_mod, l.orderitem:product:price ) }">

			<MvFOREACH ITERATOR = "l.discount" ARRAY = "l.orderitem:product:discounts" COUNT = "{ l.orderitem:product:discount_count }">
